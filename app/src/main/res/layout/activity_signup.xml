<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".views.SignupActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.7457">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:scaleType="centerCrop"
            android:src="@drawable/home_main_img" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="53dp"
            android:foregroundGravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:text="Welcome to \n MAPLe Home"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_weight="0.0485"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/signup_button"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="0.0642"
        android:background="@drawable/large_button"
        android:text="SIGN IN"
        android:textColor="@color/blue" />

    <View
        android:layout_weight="0.0214"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <Button
        android:layout_gravity="center"
        android:layout_weight="0.0643"
        android:id="@+id/create_button"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:background="@drawable/button"
        android:text="Create New Account"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_button" />

    <View
        android:layout_weight="0.0557"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
</LinearLayout>